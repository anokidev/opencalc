        "svelte": "^3.44.0",
        "svelte-check": "^2.7.1",
        "svelte-parallax": "^0.6.0",
        "svelte-preprocess": "^4.10.7", 
        "@sveltejs/adapter-auto": "next",
        "@sveltejs/kit": "next",

