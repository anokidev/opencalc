{

    "name": "openmath",
    "version": "0.0.0",
    "description": "A monorepo for OpenMath, a free and open-source collection of graphical calculator apps.",
    "author": "anokidev",
    "private": true,
    "license": "MIT",

    "workspaces": [
        "sites/*",
        "packages/*"
    ],

    "scripts": {

        "build": "turbo run build:standard",
        "dev": "turbo run run:dev --parallel --no-cache",
        "lint": "turbo run rewrite:lint",
        "format": "turbo run rewrite:format"

    },

    "dependencies": {

        "esbuild": "^0.15.13"

    },

    "devDependencies": {

        "sass": "^1.56.0",
        "postcss": "^8.4.18",
        "tailwindcss": "^3.2.2",
        "autoprefixer": "latest",

        "@openmath/eslint-config-custom": "*",
        "eslint": "latest",

        "prettier": "latest",
        "prettier-plugin-svelte": "latest",

        "@playwright/test": "^1.25.0",

        "turbo": "latest"

    }

}

