{
  "$schema": "https://turbo.build/schema.json",

  "pipeline": {
    "run:dev": {
      "cache": false
    },
    "run:prod": {
      "cache": false
    },

    "build:standard": {
      "dependsOn": ["@opencalc/ui", "@opencalc/configs"],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    },
    
    "rewrite:lint": {
      "outputs": []
    },
    "rewrite:format": {
      "outputs": []
    }
  },

  "globalDependencies": [
    ".env"
  ]
}
