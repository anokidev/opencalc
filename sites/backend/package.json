{
  "name": "@opencalc/backend",
  "version": "0.0.0",
  "description": "Backend server for database and user auth.",
  "author": "anokidev",
  "private": true,
  "license": "MIT",

  "scripts": {
    "run:dev": "nest start --watch",
    "run:prod": "node dist/main",
    "run:debug": "nest start --debug --watch",

    "build:standard": "nest build",
    "build:prebuild": "rimraf dist",

    "rewrite:lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "rewrite:format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",

    "test:standard": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },

  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",

    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },

  "devDependencies": {
    "@opencalc/configs": "*",
    "@opencalc/eslint-config-custom": "*",
    "@opencalc/supabase" : "*",

    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",

    "typescript": "^4.7.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",

    "@types/express": "^4.17.13",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",

    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3"
  }
}
